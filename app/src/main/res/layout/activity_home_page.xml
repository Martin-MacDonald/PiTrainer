<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mmacdonald.pitrainer.HomePage">


    <android.support.v7.widget.Toolbar
        android:id="@+id/homePageToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:id="@+id/homePageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeToPiPage"
            android:text="@string/test_button"
            android:drawableLeft="@android:drawable/btn_star"
            />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:id="@+id/practiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeToPiPage"
            android:text="@string/practice_button"
            android:drawableLeft="@android:drawable/ic_menu_help"/>

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:id="@+id/learnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeToPiPage"
            android:text="@string/learn_button"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:gravity="fill_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/worldBestTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/world_best" />

        <TextView
            android:id="@+id/userBestTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/user_best" />

        <TextView
            android:id="@+id/randomfactTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/fact_5" />
    </LinearLayout>

</RelativeLayout>
